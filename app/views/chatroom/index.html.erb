<h2 class="ui center aligned icon header">
  <%= image_tag("favicon.png", class: "ui massive image") %><br>
  ChattingApp
</h2>

<div class="ui fluid grid">
  <div class="four wide fluid column">
    <div class="ui fluid raised card">
      <div class="content">
        <div class="ui vertical pointing menu">
          <a class="active item">
            Home
          </a>
          <a class="item">
            Messages
          </a>
          <a class="item">
            Friends
          </a>
        </div>
      </div> 
    </div>   
  </div>
  <div class="twelve wide fluid column">
    <div class="ui fluid raised card">
      <div class="content">
        <div class="ui small feed">
          <% @messages.each do |message| %>
            <div class="event">
              <div class="content">
                <div class="summary">
                  <em><%= message.user.username %></em> <%= message.words %>
                </div>
              </div>
            </div>
          <% end %>  
        </div>  
      </div>
      <div class="extra content">
        
          <div class="ui fluid left icon input">
            <input type="text" placeholder="Write a message...">
            <div class="ui fluid icon">
              <i class="bordered fluid inverted blue pencil large icon"></i>
            </div>  
          </div>
      </div>  
    </div>    
  </div>
</div>
