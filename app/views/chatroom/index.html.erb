<h2 class="ui center aligned icon header">
  <%= image_tag("favicon.png", class: "ui massive image") %><br>
  ChattingApp
</h2>

<div class="ui fluid grid">
  <div class="four wide fluid column">
    <div class="ui fluid raised card">
      <div class="content">
        <div class="ui vertical pointing menu">
          <a class="active item">
            Home
          </a>
          <a class="item">
            Messages
          </a>
          <a class="item">
            Friends
          </a>
        </div>
      </div> 
    </div>   
  </div>
  <div class="twelve wide fluid column">
    <div class="ui fluid raised card">
      <div class="content">
        <div class="ui small feed">
          <%= render @messages %>
        </div>  
      </div>
      <div class="extra content">
        <%= form_for(@message, html: { class:"ui reply form", role: "form" }, url: message_path) do |f|%>
          <div class="field">
            <div class="ui fluid left icon input">
          <%= f.text_field :words %>
          <%= f.button '<i class="bordered fluid inverted blue pencil large icon"></i>'.html_safe  %>
        <% end %>
      </div>  
    </div>    
  </div>
</div>
